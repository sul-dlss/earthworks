<nav id="header-navbar" class="navbar navbar-expand-md navbar-dark bg-cardinal-red topbar" role="navigation">
  <div class="container">
    <h1 class="d-flex mb-0">
      <%= link_to root_path, class: 'navbar-brand navbar-logo py-3' do %>
        <%= application_name %>
      <% end %>
    </h1>

    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#user-util-collapse" aria-controls="user-util-collapse" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse justify-content-md-end" id="user-util-collapse">
      <%= render :partial=>'/user_util_links' %>
    </div>
  </div>
</nav>

<% if controller_name == 'catalog' && has_search_parameters? %>
  <nav id="search-navbar" class="navbar navbar-expand-md navbar-light bg-beige" role="navigation">
    <div class="container">
      <div class='col-lg-8 my-3 col-xs-12'>
        <%= render_search_bar  %>
      </div>
    </div>
  </nav>
<% end %>
